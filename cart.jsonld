{
    "@context": "https://www.w3.org/2019/wot/td/v1",
    "title": "Cart",
    "@type": "tm:ThingModel",
    "base": "http://localhost:8080/api/2/things/io.github.pervasivecats:cart-{id}-{store}",
    "description": "A smart cart that can be used by customers for adding products to their own digital cart.",
    "securityDefinitions": {
        "nosec_sc": {
            "scheme": "nosec"
        }
    },
    "security": "nosec_sc",
    "uriVariables": {
        "id": {
            "title": "id",
            "description": "The id of the cart in its store.",
            "type": "integer",
            "minimum": 0
        },
        "store": {
            "title": "store",
            "description": "The store in which the cart is placed.",
            "type": "integer",
            "minimum": 0
        }
    },
    "properties": {
        "id": {
            "title": "id",
            "observable": false,
            "readOnly": true,
            "description": "The id of the cart in its store.",
            "type": "integer",
            "minimum": 0,
            "forms": [
                {
                    "op": [
                        "readproperty"
                    ],
                    "href": "/attributes/id"
                }
            ]
        },
        "store": {
            "title": "store",
            "observable": false,
            "readOnly": true,
            "description": "The store in which the cart is placed.",
            "type": "integer",
            "minimum": 0,
            "forms": [
                {
                    "op": [
                        "readproperty"
                    ],
                    "href": "/attributes/store"
                }
            ]
        },
        "movable": {
            "title": "movable",
            "observable": false,
            "readOnly": true,
            "description": "Whether or not the cart can be moved.",
            "type": "boolean",
            "forms": [
                {
                    "op": [
                        "readproperty"
                    ],
                    "href": "/attributes/movable"
                }
            ]
        },
        "customer": {
            "title": "customer",
            "observable": false,
            "readOnly": true,
            "description": "The customer associated with the cart, if present.",
            "oneOf": [
                {
                    "type": "string",
                    "format": "email"
                },
                {
                    "type": "null"
                }
            ],
            "forms": [
                {
                    "op": [
                        "readproperty"
                    ],
                    "href": "/attributes/customer"
                }
            ]
        }
    },
    "actions": {
        "raiseAlarm": {
            "title": "raiseAlarm",
            "description": "Raises the cart alarm, forcing the customer to backing away from the cart.",
            "forms": [
                {
                    "op": [
                        "invokeaction"
                    ],
                    "href": "/messages/inbox/raiseAlarm",
                    "contentType": "none/none",
                    "response": {
                        "contentType": "application/json"
                    }
                }
            ],
            "safe": false,
            "idempotent": false,
            "input": {},
            "output": {
                "oneOf": [
                    {
                        "type": "object",
                        "required": [
                            "error",
                            "result"
                        ],
                        "properties": {
                            "result": {
                                "type": "integer",
                                "const": 1
                            },
                            "error": {
                                "type": "null"
                            }
                        }
                    },
                    {
                        "type": "object",
                        "required": [
                            "error",
                            "result"
                        ],
                        "properties": {
                            "result": {
                                "type": "null"
                            },
                            "error": {
                                "type": "object",
                                "required": [
                                    "type",
                                    "message"
                                ],
                                "properties": {
                                    "type": {
                                        "type": "string",
                                        "enum": [
                                            "CartAlarmAlreadyRaised",
                                            "CartAlarmNotRaised"
                                        ]
                                    },
                                    "message": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                ]
            }
        },
        "associate": {
            "title": "associate",
            "description": "Associates the cart with the customer who unlocked it.",
            "forms": [
                {
                    "op": [
                        "invokeaction"
                    ],
                    "href": "/messages/inbox/associate",
                    "contentType": "application/json",
                    "response": {
                        "contentType": "application/json"
                    }
                }
            ],
            "safe": false,
            "idempotent": false,
            "input": {
                "type": "object",
                "required": [
                    "customer"
                ],
                "properties": {
                    "customer": {
                        "type": "string",
                        "format": "email"
                    }
                }
            },
            "output": {
                "oneOf": [
                    {
                        "type": "object",
                        "required": [
                            "error",
                            "result"
                        ],
                        "properties": {
                            "result": {
                                "type": "integer",
                                "const": 1
                            },
                            "error": {
                                "type": "null"
                            }
                        }
                    },
                    {
                        "type": "object",
                        "required": [
                            "error",
                            "result"
                        ],
                        "properties": {
                            "result": {
                                "type": "null"
                            },
                            "error": {
                                "type": "object",
                                "required": [
                                    "type",
                                    "message"
                                ],
                                "properties": {
                                    "type": {
                                        "type": "string",
                                        "enum": [
                                            "CartAlarmAlreadyRaised",
                                            "CartAlarmNotRaised"
                                        ]
                                    },
                                    "message": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                ]
            }
        },
        "lock": {
            "title": "lock",
            "description": "Locks the cart.",
            "forms": [
                {
                    "op": [
                        "invokeaction"
                    ],
                    "href": "/messages/inbox/lock",
                    "contentType": "none/none",
                    "response": {
                        "contentType": "application/json"
                    }
                }
            ],
            "safe": false,
            "idempotent": false,
            "input": {},
            "output": {
                "oneOf": [
                    {
                        "type": "object",
                        "required": [
                            "error",
                            "result"
                        ],
                        "properties": {
                            "result": {
                                "type": "integer",
                                "const": 1
                            },
                            "error": {
                                "type": "null"
                            }
                        }
                    },
                    {
                        "type": "object",
                        "required": [
                            "error",
                            "result"
                        ],
                        "properties": {
                            "result": {
                                "type": "null"
                            },
                            "error": {
                                "type": "object",
                                "required": [
                                    "type",
                                    "message"
                                ],
                                "properties": {
                                    "type": {
                                        "type": "string",
                                        "enum": [
                                            "CartAlarmAlreadyRaised",
                                            "CartAlarmNotRaised"
                                        ]
                                    },
                                    "message": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                ]
            }
        },
        "unlock": {
            "title": "unlock",
            "description": "Unlocks the cart.",
            "forms": [
                {
                    "op": [
                        "invokeaction"
                    ],
                    "href": "/messages/inbox/unlock",
                    "contentType": "none/none",
                    "response": {
                        "contentType": "application/json"
                    }
                }
            ],
            "safe": false,
            "idempotent": false,
            "input": {},
            "output": {
                "oneOf": [
                    {
                        "type": "object",
                        "required": [
                            "error",
                            "result"
                        ],
                        "properties": {
                            "result": {
                                "type": "integer",
                                "const": 1
                            },
                            "error": {
                                "type": "null"
                            }
                        }
                    },
                    {
                        "type": "object",
                        "required": [
                            "error",
                            "result"
                        ],
                        "properties": {
                            "result": {
                                "type": "null"
                            },
                            "error": {
                                "type": "object",
                                "required": [
                                    "type",
                                    "message"
                                ],
                                "properties": {
                                    "type": {
                                        "type": "string",
                                        "enum": [
                                            "CartAlarmAlreadyRaised",
                                            "CartAlarmNotRaised"
                                        ]
                                    },
                                    "message": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                ]
            }
        }
    },
    "events": {
        "itemInsertedIntoCart": {
            "title": "itemInsertedIntoCart",
            "description": "A customer inserted an item into the cart.",
            "forms": [
                {
                    "op": [
                        "subscribeevent"
                    ],
                    "href": "/messages/outbox/itemInsertedIntoCart",
                    "contentType": "application/json"
                }
            ],
            "data": {
                "type": "object",
                "required": [
                    "catalogItem",
                    "itemId"
                ],
                "properties": {
                    "catalogItem": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "itemId": {
                        "type": "integer",
                        "minimum": 0
                    }
                }
            }
        },
        "cartMoved": {
            "title": "cartMoved",
            "description": "A customer moved the cart.",
            "forms": [
                {
                    "op": [
                        "subscribeevent"
                    ],
                    "href": "/messages/outbox/cartMoved"
                }
            ],
            "data": {}
        }
